<% if @the_user == current_user%>
	<h2> your profile! </h2>

<% else %>
<h1> <%= @the_user.first_name %>'s profile! </h1>
<%end%>

<ul>
	<li> <%= @the_user.first_name %> </li>
	<li> <%= @the_user.email %> </li>
</ul>

<h3> comics </h3>

<ul>
	<% @comics_list.each do |one_comic|%>
	<li> 
		<h4><%= one_comic.title%> </h4>
		<p> Publisher: <em> <%= one_comic.publisher%> </em> </p>
	</li>
	<% end %>
</ul>